 * @status stable
 * @version 1.0.0
 */

DirObj.prototype.scope = {
	init: function () {
		return [];
	}
};

Snakeskin.addDirective(
	'with',

	{
		placement: 'template',
		sys: true
	},

	function (command) {
		this.startDir();
		this.scope.push(command);
	},

	function () {
		this.scope.pop();
	}
);