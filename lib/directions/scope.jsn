/**!
 * @status stable
 * @version 1.0.0
 */

DirObj.prototype.scope = {
	init: function () {
		return [];
	}
};

Snakeskin.addDirective(
	'with',

	{
		sysDir: true
	},

	(command, commandLength, dir, params) => {
		dir
			.isDirectiveInBlock(params.name)
			.startDir('with', {
				scope: command
			});

		dir.scope.push(command);
	}
);