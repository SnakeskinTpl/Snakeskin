/**!
 * @status stable
 * @version 1.0.0
 */

Snakeskin.addDirective(
	'with',

	{
		placement: 'template',
		sys: true
	},

	function (command) {
		if (!command) {
			throw this.error('Invalid syntax');
		}

		this.startDir();
		this.scope.push(command);
	},

	function () {
		this.scope.pop();
	}
);