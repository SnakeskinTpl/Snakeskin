/**!
 * @status stable
 * @version 1.0.0
 */

Snakeskin.addDirective(
	'void',

	{
		replacers: {
			'?': (cmd) => cmd.replace(/^\?/, 'void ')
		}
	},

	(command, commandLength, dir, params) => {
		dir
			.isDirectiveInBlock(params.name)
			.startInlineDir(params.name);

		if (dir.isSimpleOutput()) {
			dir.save(dir.prepareOutput(command) + ';');
		}
	}
);