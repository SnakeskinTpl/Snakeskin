/**!
 * @status stable
 * @version 1.0.0
 */

DirObj.prototype.varCache = {
	init: function () {
		return {};
	}
};

Snakeskin.addDirective(
	'var',

	{
		inBlock: true,
		replacers: {
			':': (cmd) => cmd.replace(/^:/, 'var ')
		}
	},

	(command) => {
		this.startInlineDir();

		var struct = command.split('='),
			realVar = this.declVar(struct[0].trim());

		if (this.isSimpleOutput()) {
			struct[0] = realVar + ' ';
			this.save(this.prepareOutput('var ' + struct.join('=') + ';', true));
		}
	}
);