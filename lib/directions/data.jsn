/**!
 * @status stable
 * @version 1.0.0
 */

Snakeskin.addDirective(
	'data',

	{
		placement: 'template',
		notEmpty: true,
		replacers: {
			'=': (cmd) => cmd.replace(/^=/, 'data ')
		}
	},

	function (command) {
		this.startInlineDir();
		if (this.isSimpleOutput()) {
			this.save('__SNAKESKIN_RESULT__ += \'' + this.replaceTplVars(command) + '\';');
		}
	}
);

Snakeskin.addDirective(
	'decl',

	{
		placement: 'template',
		notEmpty: true,
		replacers: {
			'{': (cmd) => cmd.replace(/^\{/, 'decl ')
		}
	},

	function (command) {
		this.startInlineDir();
		if (this.isSimpleOutput()) {
			command = this.replaceTplVars(command);

			let start = /^\{+/.exec(command) || [''],
				end = /\}+$/.exec(command) || [''];

			let add;
			try {
				add = new Array(end[0].length - start[0].length + 1).join('{');

			} catch (ignore) {
				throw this.error('Invalid syntax');
			}

			this.save('__SNAKESKIN_RESULT__ += \'{' + add + command + '}\';');
		}
	}
);

Snakeskin.addDirective(
	'attr',

	{
		placement: 'template',
		notEmpty: true
	},

	function (command) {
		this.startInlineDir();
		if (this.isSimpleOutput()) {
			let parts = command.match(/(.*?),\s+(.*)/);

			if (!parts) {
				throw this.error('Invalid syntax');
			}

			parts[1] = (parts[1].charAt(0) === '-' ? '\'data-\' + ' + parts[1].slice(1) : parts[1]).trim();
			parts[2] = this.prepareOutput(parts[2].trim(), true);

			this.save(
				'if (' + parts[2] + ') {' +
					'__SNAKESKIN_RESULT__ += ' + parts[1] + ' + \'="\' + ' + parts[2] + ' + \'"\';' +
				'}'
			);
		}
	}
);